{% extends "base.jinja2" %}

{% set body_class = 'jm-background-v1' %}

{% block styles %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
{% endblock styles %}

{% block main %}
    <div class="jm-page-wrapper">
        <div class="jm-page-wrapper-inner">

            {% block header %}

            {% endblock header %}

            <div class="jm-page-content {{ page_class or '' }}">
                <div class="jm-page-content-inner">
                    <div class="row">
                        <div class="container">
                            <div class="jm-sidebar">
                                {% include "parts/sidebar.jinja2" %}
                            </div>

                            {% block content %}
                                {# contents #}
                            {% endblock content %}
                        </div>
                    </div>
                </div>

                {% block footer %}
                    <p class="text-footer">@ DriveELD</p>
                {% endblock footer %}
            </div>
        </div>
    </div>
{% endblock main %}