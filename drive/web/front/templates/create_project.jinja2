{% extends "layout/landing_layout.jinja2" %}

{% block content %}
    <div class="bg-onboarding-organization-data">
    <div class="row">
        <div class="app-create-project-close">
            <div class="app-create-project-close-btn">
                <a href="#" data-toggle="modal" data-target="#closeAppCreateProject"><span
                        class="glyphicon glyphicon-remove"></span><br/><span>QUIT</span></a>
            </div>
        </div>
    </div>
    <div class="login-box app-create-project-box projects-adjust-size">
        <div class="login-content">
            <h2 class="login-title text-center">Create a New Project</h2>
            <p class="onboarding-organization-data-text">
                Give your project a name, a start date, and tell us a little about the project.
            </p>
            <form class="login-form">
                <div class="form-group">
                    <label>Project Name</label>
                    <input type="text" class="form-control" placeholder="">
                    <p class="text-right-form">For example: 2017 Children Project</p>
                </div>

                <div class="form-group has-icon-right has-datetimepicker">
                    <label>Project Start Date</label>
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control"/>
                        <span class="input-group-addon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>

                    </span>
                    </div>
                </div>


                <div class="form-group">
                    <label>Private/Public</label>
                    <div class="form-control-select form-control-select-has-placeholder">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle form-control" type="button" data-toggle="dropdown">Select
                                One
                                <span class="glyphicon glyphicon-triangle-bottom"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="#">HTML</a></li>
                                <li><a href="#">CSS</a></li>
                                <li><a href="#">JavaScript</a></li>
                            </ul>
                        </div
                    </div>
                </div>
                <div class="form-group">
                    <label>Project Description</label>
                    <div class="form-control-textarea">
                        <textarea class="form-control" placeholder="Type here..."></textarea>
                    </div>
                </div>
                <div class="btn-login">
                    <button type="submit" class="btn">Continue To Customer Research Questions</button>
                </div>
            </form>
        </div>
    </div>
    </div>
    <div class="modal fade" id="closeAppCreateProject" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <p class="app-create-project-modal-text">Are you sure you want to quit? You will <span>lose <br/>all of your progress</span>
                        if you quit now.</p>
                </div>
                <div class="modal-footer app-create-project-modal-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-left" data-dismiss="modal">No, I want to continue
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-orange">Yes, I want to quit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}

