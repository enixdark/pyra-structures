{% extends "layout/landing_layout.jinja2" %}
{% from "parts/logo.jinja2" import landing_logo with context %}

{% block header %}
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            {{ landing_logo() }}
        </div>

        <div class="col-md-6 col-sm-6 col-xs-6">
            {% if not request.user %}
                <div class="landing-login text-right">
                    <a href="{{ url('login') }}">Login</a>
                </div>
            {% else %}
                <div class="landing-login text-right">
                    <a href="{{ url('logout') }}">Logout</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock header %}

{% block content %}
    <div class="landing-content">
        {% if not request.user %}
        <ul class="landing-list-link">
            <li>
                <div class="landing-create-account">
                    <a href="{{ url('register') }}" class="landing-create-account-link">CREATE A FREE ACCOUNT</a>
                </div>
            </li>
        </ul>
        {% endif %}
    </div>
{% endblock %}

{% block footer %}{% endblock %}
